<svg xmlns="http://www.w3.org/2000/svg" width="600" height="400" viewBox="0 0 600 400">
  <rect width="600" height="400" fill="#f0f0f0" />
  
  <!-- Background pattern -->
  <pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse">
    <path d="M 20 0 L 0 0 0 20" fill="none" stroke="#e0e0e0" stroke-width="1" />
  </pattern>
  <rect width="600" height="400" fill="url(#grid)" />
  
  <!-- Color gradient -->
  <defs>
    <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#3a86ff;stop-opacity:0.7" />
      <stop offset="100%" style="stop-color:#ff006e;stop-opacity:0.7" />
    </linearGradient>
  </defs>
  
  <!-- Main content -->
  <g transform="translate(300, 200)">
    <!-- Recommendation nodes -->
    <circle cx="-100" cy="-50" r="40" fill="#3a86ff" opacity="0.7" />
    <circle cx="0" cy="0" r="60" fill="#ff006e" opacity="0.7" />
    <circle cx="120" cy="-30" r="35" fill="#8338ec" opacity="0.7" />
    <circle cx="-80" cy="70" r="30" fill="#8338ec" opacity="0.7" />
    <circle cx="70" cy="80" r="45" fill="#3a86ff" opacity="0.7" />
    
    <!-- Connection lines -->
    <line x1="-100" y1="-50" x2="0" y2="0" stroke="#333" stroke-width="2" opacity="0.6" />
    <line x1="0" y1="0" x2="120" y2="-30" stroke="#333" stroke-width="2" opacity="0.6" />
    <line x1="0" y1="0" x2="-80" y2="70" stroke="#333" stroke-width="2" opacity="0.6" />
    <line x1="0" y1="0" x2="70" y2="80" stroke="#333" stroke-width="2" opacity="0.6" />
  </g>
  
  <!-- Title -->
  <rect x="150" y="20" width="300" height="50" rx="10" fill="rgba(255,255,255,0.8)" />
  <text x="300" y="55" font-family="Arial" font-size="24" text-anchor="middle" fill="#333">AI Recommendation Engine</text>
</svg> 